    <script src="..//Dashboard.js"></script>
    <script>
      const exportBtn = document.getElementById("exportBtn");
      const responseDiv = document.getElementById("response");

      exportBtn.addEventListener("click", async () => {
        try {
          responseDiv.textContent = "Preparing file...";

          const res = await fetch("https://localhost:44354/api/Books/export");
          if (!res.ok) throw new Error("Failed to export");

          const blob = await res.blob();
          const url = window.URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          a.download = "Books.xlsx";
          document.body.appendChild(a);
          a.click();
          a.remove();
          window.URL.revokeObjectURL(url);

          responseDiv.textContent = "‚úÖ Export successful. File downloaded.";
        } catch (error) {
          responseDiv.innerHTML = `<span style="color: red;">‚ùå ${error.message}</span>`;
        }
      });
    </script>